@model PuntoVenta.Models.Seguridad.LogIn
@{
    Layout = "/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Login";
}
<div class="row text-center">
    <img src='@Url.Content("~/Content/img/logo_fix.png")' />
</div>
<div class="login-form">
    <form action="/Ingreso" method="post">
        @Html.AntiForgeryToken()
        <h2 class="text-center">Bienvenido</h2>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input type="text" class="form-control" id="Usuario" name="Usuario" placeholder="Usuario" required="required">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" required="required">
            </div>
        </div>
        <p>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</p>
        <div class="form-group">
            <button type="submit" class="btn btn-primary login-btn btn-block">Enviar</button>
        </div>
